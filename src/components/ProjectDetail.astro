---
interface Props {
  title: string
  date: string
  description: string
  technologies: string[]
  imageUrl?: string
  projectUrl?: string
  achievements: string[]
}

const { title, date, description, technologies, imageUrl, projectUrl, achievements } = Astro.props
---

<div class="rounded-lg border bg-card p-6 shadow-sm transition-all hover:shadow-md">
  <div class="flex flex-col md:flex-row gap-6">
    {imageUrl && (
      <div class="md:w-1/3">
        <img 
          src={imageUrl} 
          alt={title} 
          class="rounded-md object-cover w-full h-auto aspect-video"
        />
      </div>
    )}
    <div class={imageUrl ? "md:w-2/3" : "w-full"}>
      <div class="flex flex-col sm:flex-row sm:justify-between mb-2">
        <h3 class="text-xl font-semibold">{title}</h3>
        <span class="text-sm text-muted-foreground">{date}</span>
      </div>
      
      <p class="text-muted-foreground mb-4">{description}</p>
      
      {achievements.length > 0 && (
        <div class="mb-4">
          <h4 class="font-medium mb-2">Key Achievements:</h4>
          <ul class="list-disc pl-5 text-muted-foreground">
            {achievements.map(achievement => (
              <li>{achievement}</li>
            ))}
          </ul>
        </div>
      )}
      
      <div class="flex flex-wrap gap-2 mb-4">
        {technologies.map(tech => (
          <span class="px-2 py-1 bg-primary/10 text-primary rounded-md text-xs">{tech}</span>
        ))}
      </div>
      
      {projectUrl && (
        <a 
          href={projectUrl} 
          target="_blank" 
          rel="noopener noreferrer"
          class="inline-flex items-center text-primary hover:underline"
        >
          View Project
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>
      )}
    </div>
  </div>
</div> 
